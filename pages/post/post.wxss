page{
  height: 100%;
}
.nav-header{
  width: 100%;
  height:73rpx;
  background: #000000;
}
.header-name{
  font-size: 28rpx;
  color: #fff;
  line-height: 73rpx;
  text-align: center;
}

/* 内容部分 */
.post-content{
  width: 100%;
  height: 144rpx;
  display: flex;
  align-items: center;
  background: #f2f2f2;
}
.post-box{
  width: 50rpx;
  height: 50rpx;
  border: 5px solid #c9c9c9;
  margin-left: 45rpx;
}
.post-box-children{
  width: 25rpx;
  height:25rpx;
  background: #c9c9c9;
  margin-top: 13rpx;
  margin-left: 13rpx; 
}
.post-content-text{
  font-size: 40rpx;
  margin-left: 24rpx;
  width: 550rpx;
  overflow: hidden;
}
.post-content-img{
  width: 10rpx;
  height: 40rpx

}

/* 弹框开始 */
.bomb-box{
  width: 550rpx;
  border-radius: 10px;
  position: fixed;
  top: 320rpx;
  left: 100rpx;
  overflow: hidden;
  box-shadow: 1px 3px 20px 2px #888888;
}
.bomb-box-title{
  width: 100%;
  height: 72rpx;  
  background: #000000;
  font-size: 42rpx;
  color: #fff;
  text-align: center;
  line-height: 72rpx;
}
.bomb-box-content{
  width: 100%;
  height: 402rpx;
  font-size: 42rpx;
  padding:35rpx 31rpx 35rpx 43rpx; 
  box-sizing: border-box;
  background: #fff;
}
.bomb-box-btn{
  width: 100%;
  height: 97rpx;
  font-size: 40rpx;
  color: #fff;
  text-align: center;
  line-height: 97rpx;
}
.bomb-box-determine{
  background: #ce1212;
}
.bomb-box-cancel{
  background: #00b4ff;
}
/* 底部 */
.footer{
  position: fixed;
  right:35rpx;
  bottom: 43rpx;
  border-radius: 50%;
}
.footer-img{
  width: 122rpx;
  height: 122rpx; 
  border-radius: 50%;
}
.chang-box{
  position: absolute;
  width:100%;
  box-sizing: border-box;
  padding:20rpx;
  height:100%;
  background:gray;
  top:0;
  left:0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.chang-box input{
  background:white;
}